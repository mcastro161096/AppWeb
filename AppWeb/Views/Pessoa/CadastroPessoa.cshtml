
@{
    ViewBag.Title = "Cadastro de cliente";
}

<h2>Cadastro de Cliente</h2>
<form method="post" action="InserePessoa">
    <fieldset>
    <legend>Informações pessoais:</legend>
        <div>
            <label>Nome </label>
            <input type="text" name="nome" required placeholder="Ex:Lucas" />
        </div>
    </fieldset><br>

               <fieldset>
               <legend>Contatos:</legend>
                   <div>
                       <label>Telefone</label>
                       <input type="tel" name="telefone" required placeholder="Ex:(51)99988-7766" pattern="\([0-9]{2}\)[0-9]{5}-[0-9]{4}" />
                   </div>
               </fieldset><br>

                          <fieldset>
                          <legend>Informações do veículo:</legend>
                              <div>
                                  <label>Placa do veículo</label>
                                  <input type="text" name="placa_do_veiculoS" required placeholder="Ex:iac2845" pattern="[a-z]{3}[0-9]{4}" />
                              </div>
                          </fieldset><br>
    <div>
        <input type="submit" name="botaoSalvar" value="Salvar"  />
        <input type="reset" name="botaoCancelar" value="Cancelar"  />
    </div>
</form>


